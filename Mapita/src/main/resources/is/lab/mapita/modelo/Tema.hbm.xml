<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="is.lab.mapita.modelo.Tema" table="tema" schema="public" optimistic-lock="version">
        <id name="idtema" type="int">
            <column name="idtema" />
            <generator class="identity" />
        </id>
        <many-to-one name="usuario" class="is.lab.mapita.modelo.Usuario" fetch="select">
            <column name="usuarioid" />
        </many-to-one>
        <property name="nombre" type="string">
            <column name="nombre" not-null="true" />
        </property>
        <property name="color" type="string">
            <column name="color" not-null="true" />
        </property>
    </class>
</hibernate-mapping>